# =============================================================================
# P2P Atomic Exchange - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/p2p_exchange?schema=public"

# -----------------------------------------------------------------------------
# Redis (for caching and rate limiting)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# Chain A Configuration (Source Chain - e.g., Sepolia)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CHAIN_A_ID=11155111
NEXT_PUBLIC_CHAIN_A_NAME="Sepolia"
NEXT_PUBLIC_CHAIN_A_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY"
NEXT_PUBLIC_CHAIN_A_ORDERBOOK_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CHAIN_A_ESCROW_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CHAIN_A_BLOCK_EXPLORER="https://sepolia.etherscan.io"

# -----------------------------------------------------------------------------
# Chain B Configuration (Destination Chain - e.g., Base Sepolia)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CHAIN_B_ID=84532
NEXT_PUBLIC_CHAIN_B_NAME="Base Sepolia"
NEXT_PUBLIC_CHAIN_B_RPC_URL="https://base-sepolia.g.alchemy.com/v2/YOUR_KEY"
NEXT_PUBLIC_CHAIN_B_ORDERBOOK_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CHAIN_B_ESCROW_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CHAIN_B_BLOCK_EXPLORER="https://sepolia.basescan.org"

# -----------------------------------------------------------------------------
# Indexer Configuration
# -----------------------------------------------------------------------------
INDEXER_START_BLOCK_A=0
INDEXER_START_BLOCK_B=0
INDEXER_POLL_INTERVAL_MS=12000
REORG_TOLERANCE_BLOCKS=64

# -----------------------------------------------------------------------------
# WalletConnect Project ID (get from cloud.walletconnect.com)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your_project_id_here"

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Default timelocks (in seconds)
NEXT_PUBLIC_DEFAULT_MAKER_TIMELOCK=86400
NEXT_PUBLIC_DEFAULT_TAKER_TIMELOCK=43200
